{
	"name": "melee-client",
	"version": "1.0.0",
	"description": "A melee client for online play",
	"main": "build/main.js",
	"scripts": {
		"preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install, not NPM')\"",
		"postinstall": "electron-builder install-app-deps",
		"download-phaser-typedef": "download --out typings https://raw.githubusercontent.com/photonstorm/phaser3-docs/master/typescript/phaser.d.ts",
		"clean": "rimraf build dist",
		"start": "concurrently --kill-others \"yarn serve\" \"yarn app\"",
		"app": "cross-env ELECTRON_DEBUG=true electron build/main.js",
		"build": "parcel build src/main.ts src/*.html --public-url ./ -d build --out-file=main --target=electron",
		"serve": "parcel serve src/main.ts src/*.html --public-url ./ -d build --out-file=main --target=electron",
		"dist": "yarn build && electron-builder"
	},
	"homepage": "https://github.com/distantcam/phaser-electron-typescript-parcel",
	"bugs": {
		"url": "https://github.com/distantcam/phaser-electron-typescript-parcel/issues"
	},
	"build": {
		"appId": "melee.client",
		"mac": {
			"category": "melee.client.game-client"
		},
		"files": [
			"build/*"
		]
	},
	"keywords": [
		"phaser",
		"electron"
	],
	"author": "sauc3",
	"license": "MIT",
	"dependencies": {
		"@types/node": "^14.14.10",
		"axios": "^0.21.0",
		"axios-extensions": "^3.1.3",
		"braincloud": "^4.6.0",
		"custom-electron-titlebar": "^3.2.5",
		"keytar": "^7.0.0",
		"node-localstorage": "^2.1.6",
		"phaser": "^3.24.1",
		"rxjs": "^6.6.3",
		"usb": "^1.6.3",
		"validator": "^13.5.2",
		"ws": "^7.4.1",
		"xmlhttprequest": "^1.8.0"
	},
	"devDependencies": {
		"concurrently": "5.1.0",
		"cross-env": "^7.0.2",
		"download-cli": "^1.1.1",
		"electron": "^8.5.3",
		"electron-builder": "^22.9.1",
		"electron-reload": "^1.5.0",
		"less": "^3.12.2",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"parcel-plugin-static-files-copy": "^2.5.0",
		"rimraf": "^3.0.2",
		"tslint": "^6.1.3",
		"typescript": "^4.0.5"
	},
	"engines": {
		"node": "10.22.1",
		"npm": "6.14.6"
	}
}
