	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Electron: Main",
			"type": "node",
			"request": "launch",
			"protocol": "inspector",
			"runtimeVersion": "10.22.1",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"preLaunchTask": "build",
			"runtimeArgs": [
				"--remote-debugging-port=9223",
				"build/main.js"
			],
			"env": {
				"ELECTRON_DEBUG": "vscode"
			},
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
		},
		{
			"name": "Electron: Renderer",
			"type": "chrome",
			"request": "attach",
			"port": 9223,
			"webRoot": "${workspaceFolder}",
			"timeout": 10000
		},
		{
			"name": "Parcel: Serve",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"runtimeVersion": "10.22.1",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run-script", "serve"
			]
		},
	],
	"compounds": [
		{
			"name": "Electron: All",
			"configurations": [
				"Electron: Main",
				"Electron: Renderer",
				"Parcel: Serve"
			]
		}
	]
}
