{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es6",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./typings",
			"./node_modules/@types",
			"./node_modules/@azerion/phaser-i18next/vendor/i18next"
		],
		"lib": [
			"es2017",
			"es2016",
			"es2015",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts",
		"typings/**/*.d.ts"
	]
}
